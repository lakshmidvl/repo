{
	"name": "dataflow1",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "employeedatasert",
						"type": "DatasetReference"
					},
					"name": "employeefile"
				},
				{
					"dataset": {
						"referenceName": "department",
						"type": "DatasetReference"
					},
					"name": "departmentfile"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "sinkjoindataset",
						"type": "DatasetReference"
					},
					"name": "sink1"
				}
			],
			"transformations": [
				{
					"name": "join1"
				}
			],
			"scriptLines": [
				"source(output(",
				"          Employee_id as string,",
				"          First_Name as string,",
				"          Last_Name as string,",
				"          Gender as string,",
				"          Salary as string,",
				"          Date_of_Birth as string,",
				"          Age as string,",
				"          Country as string,",
				"          Department_id as string,",
				"          Date_of_Joining as string,",
				"          Manager_id as string,",
				"          Currency as string,",
				"          End_Date as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> employeefile",
				"source(output(",
				"          Department_id as string,",
				"          Name as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> departmentfile",
				"employeefile, departmentfile join(employeefile@Department_id == departmentfile@Department_id,",
				"     joinType:'inner',",
				"     matchType:'exact',",
				"     ignoreSpaces: false,",
				"     broadcast: 'auto')~> join1",
				"join1 sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     umask: 0022,",
				"     preCommands: [],",
				"     postCommands: [],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> sink1"
			]
		}
	}
}